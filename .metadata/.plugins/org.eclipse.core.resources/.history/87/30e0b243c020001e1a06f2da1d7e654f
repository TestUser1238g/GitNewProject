package driverFactory;

import java.util.ArrayList;

public class TestJavaP {
public static void main(String args[]) {
	
	String str[]= {"baseball","a,b,bas,ball,base,cat,zzzz"};

    String str1[]=str[1].split(",");
    String longestConcatenation = "";
	for(int i=0;i<str1.length;i++) {
		if(str[0].contains(str1[i])) {
			String remaining = str[0].replace(str1[i], "");
			if (str[0].contains(remaining)) {
                if (str1[i].length() + remaining.length() > longestConcatenation.length()) {
                    longestConcatenation = str1[i] +","+ remaining;
                }
            }
        }
    }
